{
    "compilerOptions": {
      "target": "ESNext",
      "module": "Node16",
      "outDir": "./dist",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "moduleResolution": "node16",
      "types": ["node", "electron"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src"]
  }
